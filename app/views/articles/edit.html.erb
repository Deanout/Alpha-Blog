<h1>Edit existing article</h1>
<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created:</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |form| %>
  <p><%= form.label :title %><br>
  <%= form.text_field :title %></p>
  <p><%= form.label :description %><br>
  <%= form.text_area :description %></p>
  <%= form.submit %>
<% end %>
<%= link_to "Back to All Articles", articles_path %>